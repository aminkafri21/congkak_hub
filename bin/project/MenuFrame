package project;

import java.awt.Dimension;
import java.awt.FlowLayout;
import javax.swing.Icon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JOptionPane;
import project.MenuFrame.1;
import project.MenuFrame.2;
import project.MenuFrame.3;
import project.MenuFrame.4;

public class MenuFrame extends JFrame {
   private MancalaModel model;
   private MancalaController controller;
   private int numStones;

   public MenuFrame(MancalaModel model2, MancalaController controller2) {
      this.model = model2;
      this.controller = controller2;
      this.setTitle("Congkak Game");
      this.setLayout(new FlowLayout());
      this.setSize(new Dimension(250, 250));
      JButton LuxuryViewButton = new JButton("Play Game");
      JButton resetbutton = new JButton("Reset");
      LuxuryViewButton.setPreferredSize(new Dimension(150, 50));
      LuxuryViewButton.addActionListener(new 3(this));
      resetbutton.setPreferredSize(new Dimension(125, 50));
      resetbutton.addActionListener(new 4(this));
      this.add(LuxuryViewButton);
      this.add(resetbutton);
      this.setResizable(false);
      this.setVisible(true);
      this.setDefaultCloseOperation(3);
   }

   public void setStartingStones() {
      Object[] possibleValues = new Object[]{"7"};
      Object selectedValue = JOptionPane.showInputDialog(this, "Select Number of Starting Stones:\n", "Pick One", -1, (Icon)null, possibleValues, possibleValues[0]);
      if (selectedValue != null) {
         this.numStones = Integer.parseInt((String)selectedValue);
      }

   }
}
