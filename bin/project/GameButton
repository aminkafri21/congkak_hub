package project;

import java.awt.Dimension;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.border.Border;

public class GameButton extends JButton {
   protected int playerId;
   protected int buttonId;
   private MancalaView myView;

   public GameButton(MancalaView mv, MancalaController ctlr, String iconName, int width, int height, int playerid, int button) {
      this.myView = mv;
      if (!iconName.isEmpty()) {
         this.setIcon(new ImageIcon(iconName));
      }

      if (width > 0 && height > 0) {
         this.setPreferredSize(new Dimension(width, height));
      }

      this.setBorder((Border)null);
      this.setHorizontalTextPosition(0);
      this.setVerticalTextPosition(0);
      if (ctlr != null) {
         this.addActionListener(ctlr);
      }

      this.playerId = playerid;
      this.buttonId = button;
   }

   public MancalaView getView() {
      return this.myView;
   }

   public int getPlayerId() {
      return this.playerId;
   }

   public void setPlayerId(int playerId) {
      this.playerId = playerId;
   }

   public int getButtonId() {
      return this.buttonId;
   }

   public void setButtonId(int buttonId) {
      this.buttonId = buttonId;
   }
}
